{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/accessibility-metadata-format-1.0.json",
  "title": "Accessibility Metadata Format",
  "description": "Machine-readable representation of the accessibility evaluation of a web project.",
  "type": "object",
  "additionalProperties": false,
  "required": ["specVersion", "language", "project", "evaluation"],
  "properties": {
    "specVersion": {
      "type": "string",
      "description": "Version of this metadata format (e.g. '1.0.0')."
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when this report was generated (ISO 8601 / RFC 3339)."
    },
    "language": {
      "type": "string",
      "description": "Language of the report as a BCP47 tag (e.g. 'de', 'en', 'de-DE').",
      "pattern": "^[a-zA-Z]{2}(-[a-zA-Z0-9]+)*$"
    },
    "project": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "version",
        "contact",
        "scope"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Internal or machine-readable project identifier (slug, package name, etc.)."
        },
        "name": {
          "type": "string",
          "description": "Name of the project/product (theme, template, application, etc.)."
        },
        "type": {
          "type": "string",
          "description": "Type of the project (e.g. 'theme', 'plugin', 'designSystem', 'application', 'website')."
        },
        "description": {
          "type": "string",
          "description": "Short description of the project."
        },
        "platform": {
          "type": "string",
          "description": "Underlying platform (e.g. 'WordPress', 'TYPO3', 'Custom', 'None')."
        },
        "platformVersion": {
          "type": "string",
          "description": "Version of the platform, if applicable."
        },
        "homepage": {
          "type": "string",
          "format": "uri",
          "description": "Project or product homepage."
        },
        "repository": {
          "type": "string",
          "format": "uri",
          "description": "Source code repository (e.g. GitHub/GitLab)."
        },
        "license": {
          "type": "string",
          "description": "License identifier, ideally SPDX (e.g. 'GPL-2.0-or-later')."
        },
        "version": {
          "type": "string",
          "description": "Version of the project (SemVer or other)."
        },
        "lastChange": {
          "type": "string",
          "format": "date",
          "description": "Date of the last change to the project."
        },
        "contact": {
          "type": "object",
          "additionalProperties": false,
          "required": ["email"],
          "properties": {
            "organization": {
              "type": "string",
              "description": "Name of the organization."
            },
            "department": {
              "type": "string",
              "description": "Department or unit."
            },
            "person": {
              "type": "string",
              "description": "Contact person or role (e.g. 'Accessibility Team')."
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "Contact email address for accessibility-related issues."
            },
            "phone": {
              "type": "string",
              "description": "Contact phone number."
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Contact or support page URL."
            }
          }
        },
        "scope": {
          "type": "object",
          "additionalProperties": false,
          "required": ["coverage", "legalBasis"],
          "properties": {
            "coverage": {
              "type": "string",
              "description": "High-level scope of the evaluation (e.g. 'templates', 'components', 'site', 'application')."
            },
            "includesContent": {
              "type": "boolean",
              "description": "Indicates whether the evaluation also includes actual content (true) or mainly technical/layout aspects (false)."
            },
            "languages": {
              "type": "array",
              "description": "Languages in which the project is typically offered.",
              "items": {
                "type": "string",
                "pattern": "^[a-zA-Z]{2}(-[a-zA-Z0-9]+)*$"
              }
            },
            "jurisdiction": {
              "type": "string",
              "description": "Jurisdiction to which this evaluation primarily applies (e.g. 'EU-DE', 'EU', 'US')."
            },
            "legalBasis": {
              "type": "array",
              "description": "List of underlying standards or legal bases (e.g. 'WCAG 2.2', 'EN 301 549').",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            }
          }
        },
        "roadmap": {
          "type": "object",
          "additionalProperties": false,
          "required": ["plannedImprovements"],
          "properties": {
            "plannedImprovements": {
              "type": "array",
              "description": "Planned improvements in the project related to accessibility.",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["description"],
                "properties": {
                  "description": {
                    "type": "string",
                    "description": "Description of the planned improvement."
                  },
                  "relatedCriteria": {
                    "type": "array",
                    "description": "List of affected criteria (e.g. WCAG success criteria numbers).",
                    "items": {
                      "type": "string"
                    }
                  },
                  "targetDate": {
                    "type": "string",
                    "format": "date",
                    "description": "Target completion date for this improvement."
                  },
                  "issueURL": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL to an issue tracker entry (e.g. GitHub/GitLab/Jira)."
                  }
                }
              }
            },
            "nextAuditPlanned": {
              "type": "string",
              "format": "date",
              "description": "Planned date of the next accessibility audit."
            }
          }
        }
      }
    },
    "evaluation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["standard", "version", "conformance", "issues"],
      "properties": {
        "standard": {
          "type": "string",
          "description": "Name of the applied accessibility standard (e.g. 'WCAG', 'EN 301 549')."
        },
        "version": {
          "type": "string",
          "description": "Version of the applied standard (e.g. '2.2')."
        },
        "firstAudit": {
          "type": "string",
          "format": "date",
          "description": "Date of the first audit according to this standard."
        },
        "lastAudit": {
          "type": "string",
          "format": "date",
          "description": "Date of the most recent audit."
        },
        "method": {
          "type": "string",
          "description": "Evaluation method (e.g. 'selfAssessment', 'thirdParty', 'automated')."
        },
        "auditor": {
          "type": "string",
          "description": "Name/label of the evaluator or evaluation team."
        },
        "conformance": {
          "type": "string",
          "enum": [
            "fully_conformant",
            "partially_conformant",
            "not_conformant"
          ],
          "description": "Overall accessibility conformance status, aligned with common accessibility statement levels (fully, partially, not conformant)."
        },
        "reportURL": {
          "type": "string",
          "format": "uri",
          "description": "URL to a more detailed accessibility report."
        },
        "tests": {
          "type": "object",
          "additionalProperties": false,
          "required": ["environment", "runs"],
          "properties": {
            "environment": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "os": {
                  "type": "string",
                  "description": "Operating system used during testing."
                },
                "browser": {
                  "type": "string",
                  "description": "Browser used during testing."
                },
                "assistiveTech": {
                  "type": "array",
                  "description": "Assistive technologies used during testing.",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "runs": {
              "type": "array",
              "description": "Individual test runs (manual or automated).",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type", "tool", "date"],
                "properties": {
                  "type": {
                    "type": "string",
                    "description": "Type of test (e.g. 'automated', 'manual')."
                  },
                  "tool": {
                    "type": "string",
                    "description": "Name of the testing tool or approach."
                  },
                  "version": {
                    "type": "string",
                    "description": "Version of the test tool, if relevant."
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "description": "Date of the test run."
                  },
                  "sampleDescription": {
                    "type": "string",
                    "description": "Description of the tested sample (e.g. which pages, templates, flows)."
                  }
                }
              }
            }
          }
        },
        "issues": {
          "type": "array",
          "description": "List of identified accessibility issues.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["criterion", "reason"],
            "properties": {
              "criterion": {
                "type": "string",
                "description": "Reference to the corresponding criterion (e.g. WCAG success criterion '1.4.3').",
                "pattern": "^[0-9]+(\\.[0-9]+)+$"
              },
              "level": {
                "type": "string",
                "description": "Conformance level of the criterion (e.g. 'A', 'AA', 'AAA')."
              },
              "reason": {
                "type": "string",
                "description": "Explanation why the criterion is not fully met."
              },
              "alternatives": {
                "type": "array",
                "description": "Alternative ways of access or assistance for this specific issue.",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["description"],
                  "properties": {
                    "description": {
                      "type": "string",
                      "description": "Description of the alternative solution or assistance."
                    },
                    "url": {
                      "type": "string",
                      "format": "uri",
                      "description": "URL to alternative content or assistance resources."
                    }
                  }
                }
              }
            }
          }
        },
        "limitations": {
          "type": "array",
          "description": "Known limitations and areas that are not, or not fully, accessible.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["area", "description"],
            "properties": {
              "area": {
                "type": "string",
                "description": "Affected area (e.g. archive, certain application sections)."
              },
              "reason": {
                "type": "string",
                "description": "Reason for the limitation (e.g. 'archivedContent', 'disproportionateBurden')."
              },
              "description": {
                "type": "string",
                "description": "Description of the limitation."
              },
              "plannedFixDate": {
                "type": ["string", "null"],
                "format": "date",
                "description": "Planned date for resolving the limitation, or null if not planned."
              }
            }
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "conformance": { "const": "fully_conformant" }
            }
          },
          "then": {
            "properties": {
              "issues": {
                "type": "array",
                "maxItems": 0
              }
            }
          }
        }
      ]
    }
  }
}
